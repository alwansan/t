private void waitForGameExit(Process process) {
    new Thread(() -> {
        try {
            int exitCode = process.waitFor();
            Log.i(TAG, "Ø§Ù†ØªÙ‡Øª Ø§Ù„Ù„Ø¹Ø¨Ø© Ø¨Ø±Ù…Ø²: " + exitCode);
